<!DOCTYPE html>
<html>
<head>
  <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
  <script async src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet"  href="css/style.css" />
</head>
<body>
<div class="title">
Causes
<% for(var i=0; i<causes.length; i++) {%>
   <li><%= causes[i] %></li>
<% } %>

<div id="exTab1" class="container">
    <ul  class="nav nav-pills">
        <li class="active">
            <a  href="#1a" data-toggle="tab">News</a>
        </li>
        <li>
            <a href="#2a" data-toggle="tab">Legislators / Bills</a>
        </li>
        <li>
            <a href="#3a" data-toggle="tab">Things you can do</a>
        </li>
    </ul>
    <div class="tab-content clearfix">
        <div class="tab-pane active" id="1a">
            <h3>Will be adding news from NY Times at http://developer.nytimes.com/article_search_v2.json#/Documentation/GET/articlesearch.json</h3>
        </div>
        <div class="tab-pane" id="2a">
          <% for(var i=0; i<localLegislators.length; i++) {%>
            <br><hr>
            <p class="legislators">
              <% if (localLegislators[i].chamber == 'house') { %>
                District <%=localLegislators[i].district%>
              <% } %>
              <a href=<%= localLegislators[i].website %>>
                <%= localLegislators[i].title %> <%= localLegislators[i].first_name %> <%= localLegislators[i].last_name %></a>
                (<%= localLegislators[i].party %>) (<%= localLegislators[i].chamber %>)
              <br><br>
              Email: <a href=mailto:<%=localLegislators[i].oc_email%>><%= localLegislators[i].oc_email %></a>
              <br><br>
              Phone: <%= localLegislators[i].phone %>
              <br><br>
              Twitter: <%= localLegislators[i].twitter_id %>
              <br><br>
              In term until <%= localLegislators[i].term_end %>
            </p>
          <% } %>
        </div>
        <div class="tab-pane" id="3a">
            <h3>DO SOMETHING !!</h3>
        </div>
    </div>
</div>

</body>
</html>

